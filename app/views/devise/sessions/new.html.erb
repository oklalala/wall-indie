<div class="container">
  <div id="login">
    <div id="email-login">
      <h5>用信箱登入</h5>
      <div class="email-login">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field form-group row">
            <%= f.label :email, "信箱", class: "col-sm-2 col-form-label" %><br />
            <div class="col-sm-10">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
          </div>

          <div class="field form-group row">
            <%= f.label :password, "密碼", class: "col-sm-2 col-form-label" %><br />
            <div class="col-sm-10">
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </div>
          </div>

          <div class="row">
            <% if devise_mapping.rememberable? -%>
              <div class="field form-group col-sm-6">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>

            <div class="actions form-group offset-sm-3 col-sm-3">
              <%= f.submit "Log in", class: "btn btn-secondary float-right" %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="email-login">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "註冊", new_registration_path(resource_name) %><br />
        <% end -%>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "忘記密碼?", new_password_path(resource_name) %><br />
        <% end -%>
      </div>
    </div>
    <hr>
    <div id="oauth-login">
      <h5>或是...</h5>
      <div>
        <div class="oauth-login fb-login">
          <%= link_to user_facebook_omniauth_authorize_path, class: "nav-link" do %>
            <%= icon('fab', 'facebook-square') %>
            <span>Facebook 登入</span>
          <% end %>
        </div>
        <div class="oauth-login spotify-login">
          <%= link_to user_spotify_omniauth_authorize_path, class: "nav-link" do %>
            <%= icon('fab', 'spotify') %>
            <span>Spotify 登入</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
