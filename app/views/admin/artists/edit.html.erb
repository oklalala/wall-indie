<div class="row">
  <div class="col-md-6">
    <%= form_for  [:admin, @artist] do |f| %>
      <div class="form-row">
        <div class='form-group col-md-7  offset-md-1'>
          <%= f.label :intro, 'Intro' %>
          <%= f.text_field :intro, class: 'form-control' %>
        </div>

        <div class='form-group col-md-4 box'>
          <%= image_tag @artist.photo, class: 'img-fluid rounded-circle' %>
          <%= f.file_field :photo %>
        </div>

        <div class='form-group col-md-5 offset-md-1'>
          <%= f.label :name, 'Name' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class='form-group col-md-6'>
          <%= f.label :youtube_link, 'Youtube' %>
          <%= f.text_field :youtube_link, class: 'form-control' %>
        </div>
        
        <div class='form-group align-self-end'>  
          <%= f.submit 'update', class: 'btn btn-warning' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
