<div class="container">
  <div id="login">
    <div id="email-login">
      <h5>註冊</h5>
      <div class="email-login">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          
          <div class="field form-group row">
            <%= f.label :email, "信箱", class: "col-sm-3 col-form-label" %><br />
            <div class="col-sm-9">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
          </div>

          <div class="field form-group row">
            <%= f.label :password, "密碼", class: "col-sm-3 col-form-label" %><br />
            <div class="col-sm-9">
              <%= f.password_field :password, autocomplete: "off",
              placeholder: "至少含#{@minimum_password_length}位字元", class: "form-control" %>
            </div>
          </div>

          <div class="field form-group row">
            <%= f.label :password_confirmation, "確認密碼", class: "col-sm-3 col-form-label" %><br />
            <div class="col-sm-9">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            </div>
          </div>

          <div class="field form-group">
            <div class="actions">
              <%= f.submit "註冊", class: "btn btn-secondary float-right" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
