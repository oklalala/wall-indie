
<h3>音樂人資訊</h3>

<table class="table">
    <tr>
      <th>名稱</th>
      <td><%= @artist.name %></td>
    </tr>
    <tr>
      <th>照片</th>
      <td><%= @artist.photo %></td>
    </tr>
    <tr>
      <th>介紹</th>
      <td><%= @artist.intro %></td>
    </tr>
</table>

<h3>作品集</h3>

<table class="table table-sm">
  <thead>
    <tr>
      <th>樂名</th>
      <th>試聽</th>
    </tr>
  </thead>
  <tbody>
    <% @artist.musics.each do |music| %>
      <tr>
        <td><%= music.name %></td>
        <td><%= music.link %></td>
      </tr>
    <% end %>
  </tbody>
</table>





